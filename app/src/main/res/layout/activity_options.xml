  <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <!-- Settings Button - Now inside scrollable area -->
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings"
                android:elevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Status Bar Spacer -->
            <View
                android:id="@+id/statusBarSpacer"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- App Logo with Modern Elevation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoCard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/app_logo"
                    android:contentDescription="@string/app_logo_desc"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Main Title with Modern Typography -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/choose_detection_mode"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/logoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/how_it_works_brief"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/mainTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Modern Info Card with Gradient Background -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/infoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/primary_subtle"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Info Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/primary" />

                    <!-- Info Text -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/info_text"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Detection Options Grid -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/infoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- First Row: Image and Video Detection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <!-- Image Detection Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/imageDetectionCard"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/primary_btn_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/primary_btn_pressed">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/image_detection_desc"
                                android:src="@drawable/ic_image"
                                app:tint="@color/primary_btn_text"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/image_detection"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_btn_text"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Video Detection Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/videoDetectionCard"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/secondary"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/soft_purple_pressed">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_video"
                                app:tint="@color/primary_btn_text"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/video_detection"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_btn_text"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Live Detection Card - Full Width -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/liveDetectionCard"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/accent"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/accent_pressed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/primary_btn_text"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/live_detection"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_btn_text"
                                android:fontFamily="@font/montserrat_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/real_time_camera_analysis"
                                android:textSize="14sp"
                                android:textColor="@color/primary_btn_text"
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Continue Button with Modern Design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueBtn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="48dp"
                android:text="@string/continue_btn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_btn_text"
                android:fontFamily="@font/montserrat_bold"
                app:backgroundTint="@color/sage_green"
                app:cornerRadius="28dp"
                app:rippleColor="@color/accent_pressed"
                app:elevation="6dp"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="end"
                app:iconSize="20dp"
                app:iconTint="@color/primary_btn_text"
                app:layout_constraintTop_toBottomOf="@id/optionsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Elegant Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:background="@color/neutral_200"
                app:layout_constraintTop_toBottomOf="@id/continueBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Footer Text with Better Typography -->
            <TextView
                android:id="@+id/footerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/copyright_and_version"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:alpha="0.8"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>