<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <!-- Status Bar Spacer -->
        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/primary_btn_bg"
            app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_image"
                    app:tint="@color/primary_btn_text"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/image_detection_title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_btn_text"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/analyze_road_signs_in"
                    android:textSize="14sp"
                    android:textColor="@color/primary_btn_text"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="4dp"
                    android:alpha="0.9"
                    tools:text="Analyze road signs in your images" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Image Selection Options -->
        <LinearLayout
            android:id="@+id/selectionContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Select from Gallery Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectImageCard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/soft_purple"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/soft_purple_pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_image"
                        app:tint="@color/primary_btn_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gallery"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_btn_text"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Take Picture Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/takePictureCard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/sage_green"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/sage_green_pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_camera"
                        app:tint="@color/primary_btn_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/camera"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_btn_text"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/select_an_image_to_get_started"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/selectionContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Selected Image Display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintTop_toBottomOf="@id/statusText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/selectedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:contentDescription="@string/image_detection_desc"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:background="@color/neutral_100" />

                <!-- Overlay for detection results -->
                <com.ayush_mann.roadsigndetection.OverlayView
                    android:id="@+id/resultOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Process Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/processBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/process_image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_btn_text"
            android:fontFamily="@font/montserrat_bold"
            app:backgroundTint="@color/primary_btn_bg"
            app:cornerRadius="28dp"
            app:rippleColor="@color/primary_btn_pressed"
            app:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/imageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Results Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/slate_blue_subtle"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/processBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detection_results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/slate_blue"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/inferenceTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/slate_blue"
                    android:fontFamily="@font/montserrat_medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:text="@string/back_to_menu"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/montserrat_medium"
            app:backgroundTint="@color/neutral_100"
            app:cornerRadius="24dp"
            app:rippleColor="@color/neutral_200"
            app:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/resultsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>