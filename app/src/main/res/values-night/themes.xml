<resources>
    <style name="Theme.RoadSignDetection" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/slate_blue</item>
        <item name="colorPrimaryVariant">@color/slate_blue_pressed</item>
        <item name="colorOnPrimary">@color/neutral_50</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/soft_purple</item>
        <item name="colorSecondaryVariant">@color/soft_purple_pressed</item>
        <item name="colorOnSecondary">@color/neutral_50</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Window and Status Bar -->
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Error Colors -->
        <item name="colorError">@color/accent_error</item>
        <item name="colorOnError">@color/neutral_50</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.App.PrimaryButton.Dark</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.SecondaryButton.Dark</item>

        <!-- Text Appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2.Dark</item>
    </style>

    <!-- Primary Button Style - Dark -->
    <style name="Widget.App.PrimaryButton.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_btn_bg</item>
        <item name="android:textColor">@color/primary_btn_text</item>
        <item name="rippleColor">@color/primary_btn_pressed</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Secondary Button Style - Dark -->
    <style name="Widget.App.SecondaryButton.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_btn_text</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/secondary_btn_text</item>
        <item name="rippleColor">@color/secondary_btn_pressed</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Text Appearance Styles - Dark -->
    <style name="TextAppearance.App.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.App.Headline2.Dark" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.App.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Card Style - Dark -->
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- App Bar Style - Dark -->
    <style name="Widget.App.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/surface_elevated</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>