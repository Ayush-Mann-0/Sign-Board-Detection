<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ================================================= -->
    <!-- COLORS.XML - DARK MODE                           -->
    <!-- Modern Sophisticated Color Palette for Dark UI   -->
    <!-- ================================================= -->
    
    <!-- ============================================= -->
    <!-- DETECTION VISUALIZATION                        -->
    <!-- ============================================= -->
    <color name="bounding_box_color">#FF00FF00</color>
    
    <!-- ============================================= -->
    <!-- PRIMARY COLOR FAMILY - BLUE                    -->
    <!-- Brightened for dark background contrast        -->
    <!-- ============================================= -->
    <color name="slate_blue">#818CF8</color>
    <color name="slate_blue_pressed">#6366F1</color>
    <color name="slate_blue_light">#A5B4FC</color>
    <color name="slate_blue_subtle">#312E81</color>
    
    <!-- ============================================= -->
    <!-- SECONDARY COLOR FAMILY - PURPLE                -->
    <!-- Adjusted for dark background visibility         -->
    <!-- ============================================= -->
    <color name="soft_purple">#A78BFA</color>
    <color name="soft_purple_pressed">#8B5CF6</color>
    <color name="soft_purple_light">#C4B5FD</color>
    <color name="soft_purple_subtle">#4C1D95</color>
    
    <!-- ============================================= -->
    <!-- ACCENT COLOR FAMILY - GREEN                    -->
    <!-- Vibrant but not harsh for dark backgrounds     -->
    <!-- ============================================= -->
    <color name="sage_green">#34D399</color>
    <color name="sage_green_pressed">#10B981</color>
    <color name="sage_green_light">#6EE7B7</color>
    <color name="sage_green_subtle">#064E3B</color>
    
    <!-- ============================================= -->
    <!-- NEUTRAL GRAY PALETTE                           -->
    <!-- Sophisticated dark theme gray scale            -->
    <!-- ============================================= -->
    <color name="neutral_50">#0A0A0A</color>   <!-- Very dark gray (near black) -->
    <color name="neutral_100">#121212</color>  <!-- Dark gray -->
    <color name="neutral_200">#1E1E1E</color>  <!-- Medium dark gray -->
    <color name="neutral_300">#2A2A2A</color>  <!-- Medium gray -->
    <color name="neutral_600">#A3A3A3</color>  <!-- Medium light gray -->
    <color name="neutral_800">#D4D4D4</color>  <!-- Light gray -->
    <color name="neutral_900">#F5F5F5</color>  <!-- Very light gray -->
    
    <!-- ============================================= -->
    <!-- APPLICATION SURFACES                           -->
    <!-- Dark mode backgrounds and surfaces             -->
    <!-- ============================================= -->
    <color name="surface">@color/neutral_50</color>
    <color name="surface_elevated">@color/neutral_100</color>
    <color name="background_scrim">#80000000</color>
    
    <!-- ============================================= -->
    <!-- BUTTON COLOR SYSTEM                           -->
    <!-- Dark mode optimized button styles               -->
    <!-- ============================================= -->
    <!-- Primary Buttons -->
    <color name="primary_btn_bg">@color/slate_blue</color>
    <color name="primary_btn_text">@color/neutral_50</color>
    <color name="primary_btn_pressed">@color/slate_blue_pressed</color>
    
    <!-- Secondary Buttons -->
    <color name="secondary_btn_bg">@color/slate_blue_subtle</color>
    <color name="secondary_btn_text">@color/slate_blue</color>
    <color name="secondary_btn_pressed">@color/neutral_300</color>
    
    <!-- ============================================= -->
    <!-- FORM CONTROLS                                 -->
    <!-- Dark mode optimized form controls              -->
    <!-- ============================================= -->
    <!-- Slider Components -->
    <color name="slider_active_track_color">@color/primary_btn_bg</color>
    <color name="slider_inactive_track_color">@color/secondary_btn_bg</color>
    <color name="slider_thumb_color">@color/primary_btn_bg</color>
    
    <!-- Switch Components -->
    <color name="switch_thumb_normal">#FFFFFF</color>
    <color name="switch_thumb_checked">@color/sage_green</color>
    <color name="switch_track_off">@color/neutral_300</color>
    <color name="switch_track_on">@color/sage_green_light</color>
    
    <!-- ============================================= -->
    <!-- TYPOGRAPHY & TEXT HIERARCHY                   -->
    <!-- Dark mode text colors for readability          -->
    <!-- ============================================= -->
    <color name="text_primary">@color/neutral_900</color>     <!-- Primary text (light) -->
    <color name="text_secondary">@color/neutral_600</color>   <!-- Secondary text -->
    <color name="text_disabled">@color/neutral_300</color>     <!-- Disabled text -->
    
    <!-- ============================================= -->
    <!-- ACCENT COLORS                                 -->
    <!-- Dark mode optimized accent colors              -->
    <!-- ============================================= -->
    <color name="accent_primary">@color/soft_purple</color>
    <color name="accent_success">@color/sage_green</color>
    <color name="accent_warning">#FBBF24</color>
    <color name="accent_error">#F87171</color>
    
    <!-- ============================================= -->
    <!-- STATUS INDICATORS                             -->
    <!-- Optimized for dark background visibility      -->
    <!-- ============================================= -->
    <color name="status_online">#4ADE80</color>
    <color name="status_away">#FBBF24</color>
    <color name="status_busy">#F87171</color>
    <color name="status_offline">@color/neutral_300</color>
    
    <!-- ============================================= -->
    <!-- WARNING & ERROR COLORS                         -->
    <!-- Dark mode optimized warning colors             -->
    <!-- ============================================= -->
    <color name="warning">#FBBF24</color>          <!-- Warning accent (brighter) -->
    <color name="warning_bg">#451A03</color>        <!-- Warning background (dark) -->
    <color name="warning_text">#FDE68A</color>      <!-- Warning text (light) -->
    
    <!-- ============================================= -->
    <!-- OVERLAY COLORS                                -->
    <!-- Camera overlay and UI overlay colors          -->
    <!-- ============================================= -->
    <color name="overlay_text_color">#FFFFFF</color>       <!-- Overlay text (white for contrast) -->
    <color name="overlay_background">#80000000</color>     <!-- Semi-transparent overlay background -->
    
    <!-- ============================================= -->
    <!-- LEGACY & SPECIAL COLORS                        -->
    <!-- Maintained for backward compatibility          -->
    <!-- ============================================= -->
    <color name="indigo_500">#6366F1</color>
    
</resources>